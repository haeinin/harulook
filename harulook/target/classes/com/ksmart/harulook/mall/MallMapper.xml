<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ksmart.harulook.mall.MallMapper">

	<resultMap type="com.ksmart.harulook.dto.MallDto" id="mallPro">
		<result property="mallProNo" column="mall_pro_no"></result>
		<result property="partnerNo" column="partner_no"></result>
		<result property="mallProName" column="mall_pro_name"></result>
		<result property="mallProPrice" column="mall_pro_price"></result>
		<result property="mallProCate" column="mall_pro_cate"></result>
		<result property="mallProImg" column="mall_pro_img"></result>
	</resultMap>

	<resultMap type="com.ksmart.harulook.dto.MallVisitorDto" id="mallVisitor">
		<result property="mallVistorNo" column="coo_visitor_no"></result>
		<result property="mallProNo" column="mall_pro_no"></result>
		<result property="mallVistorDate" column="coo_visitor_date"></result>
		<result property="mallVistorTime" column="coo_visitor_time"></result>
		<result property="mallVistitorCheck" column="coo_visitor_check"></result>
		<result property="mallVistitorPrice" column="coo_visitor_price"></result>
	</resultMap>
	
	<select id="mallProDetail" resultMap="mallPro">
		SELECT mall_pro_no,
		partner_no, mall_pro_name, mall_pro_price, mall_pro_cate, mall_pro_img
		FROM mall_pro
		WHERE mall_pro_no = #{mallProNo};
	</select>

	<select id="mallProList" parameterType="java.util.Map"
		resultMap="mallPro">
		SELECT mall_pro_no
		, mall_pro_name
		, mall_pro_price
		, mall_pro_img
		FROM mall_pro
	</select>

	<insert id="mallVisit" parameterType="com.ksmart.harulook.dto.MallVisitorDto">
		INSERT INTO coo_visitor
		(coo_visitor_no, mall_pro_no, coo_visitor_date, coo_visitor_time, coo_visitor_check)
		VALUES (#{mallVistorNo}, '01', DATE(NOW()), TIME(NOW()), 0 )
	</insert>

	<select id="mallVisitorId" resultType="int">
		SELECT COUNT(*)
		FROM coo_visitor
	</select>
	
	<insert id="mallSaleOneInsert" parameterType ="com.ksmart.harulook.dto.MallSaleDto">
	INSERT INTO mall_sale
	(
	user_id
	,mall_pro_no
	,mall_sale_amount
	,mall_sale_price
	,mall_sale_total
	,mall_sale_date
	,coo_contract_code
	)
	VALUES 
	(
	'1'
	,#{mallProNo}
	,#{mallSaleAmount}
	,#{mallSalePrice}
	,#{mallSaleTotal}
	,now()
	,#{cooContractCode}
	)
	</insert>
	
