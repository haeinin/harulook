<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
 <mapper namespace="com.ksmart.harulook.adrefundpay.service.AdRefundPayMapper">
 <select id="getRefundPayNo" resultType="String">
		SELECT
            max(CAST(substring(refund_pay_no,12) AS DECIMAL))  
        FROM refund_pay  
 </select>
 
 <insert id="insertRefundPay">
 		INSERT INTO refund_pay
				(refund_pay_no
				,refund_no
				,refund_pay_acccount
				,refund_pay_name
				,refund_pay_date
				,refund_pay_bank)
		 VALUES (#{refundPayNo}
		 		,#{refundNo}
		 		,#{refundPayAccount}
		 		,#{refundPayName}
		 		,NOW()
		 		,#{refundPayBank}
		 		)
 
 </insert>
</mapper>			