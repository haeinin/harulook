<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
  
<mapper namespace="com.ksmart.harulook.like.service.LikeMapper">

	<insert id="Likeinsert" parameterType="com.ksmart.harulook.like.service.LikeDto">
		INSERT INTO sns_like (
		sns_like_no
		,sns_board_no
		,user_id
		,sns_like_date
		)
 		VALUES (
 		#{snsLikeNo}
 		,#{snsBoardNo}
 		,#{userId}
 		,now()
 		)
	</insert>
	
	<insert id="LikeDelete" parameterType="com.ksmart.harulook.like.service.LikeDto">
		DELETE 
		FROM sns_like 
		WHERE sns_board_no = #{snsBoardNo} 
		AND user_id = #{userId};
	</insert>
	
</mapper>